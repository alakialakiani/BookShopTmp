@model BookShopTmp.Models.Translator
@{
    ViewData["Title"] = "ویرایش اطلاعات";
}

<div class="row text-right" style="direction:rtl">
    <div class="col-md-4 float-right">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="TranslatorID" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" type="text" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Family"></label>
                <input asp-for="Family" class="form-control" type="text" />
                <span asp-validation-for="Family" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-primary" />
            </div>

        </form>
        <div class="float-right">
            <a asp-action="Index" class="btn btn-light">بازگشت به لیست</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}