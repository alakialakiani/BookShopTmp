@model IEnumerable<BookShopTmp.Models.Translator>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">جدید</a>
</p>
<table class="table text-right" style="direction:rtl">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Family)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Family)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TranslatorId" class="btn btn-primary">ویرایش</a> |
                <a asp-action="Details" asp-route-id="@item.TranslatorId" class="btn btn-success">جزییات</a> |
                <a asp-action="Delete" asp-route-id="@item.TranslatorId" class="btn btn-danger">حذف</a>
            </td>
        </tr>
}
    </tbody>
</table>
